require 'rubygems'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

gem 'haml', version
require "haml"

module Haml
  module Filters
    module R
      include Base
      lazy_require 'redcloth'

      def render(text)
        ::RedCloth.new(text).to_html
      end
    end
  end
end


load 'haml'


